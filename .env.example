# Microsoft Entra ID (Azure AD) Configuration
# Copy this file to .env and fill in your actual values

# Your Azure AD tenant ID
AUTH_TENANT_ID=your-tenant-id-here

# Your Azure AD application (client) ID
AUTH_CLIENT_ID=your-client-id-here

# OAuth redirect URI (must match what's configured in Azure AD)
AUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Server configuration
SERVER_HOST=localhost
SERVER_PORT=8080
AUTH_SERVER_PORT=8000

# Optional: Custom scopes (default: openid profile email)
AUTH_SCOPES=openid profile email

# Optional: JWT secret for token validation (auto-generated if not provided)
JWT_SECRET_KEY=your-secret-key-here

# Optional: Token expiration in seconds (default: 3600 = 1 hour)
TOKEN_EXPIRY_SECONDS=3600